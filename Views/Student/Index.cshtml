@model IEnumerable<Test.Models.Student>


<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-end" asp-action="Add">Add New</a>
    </div>
</div>
<div class="row">
    <div class="col-12">
    </div>
</div>
<table class="table table-hover text-nowrap">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                FullName
            </th>
            <th>
                Title
            </th>
            <th>
                Email
            </th>
            <th>
                Class
            </th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Title</td>
                <td>@item.Email</td>
                <td>@item.Class</td>
                <td>
                    <a class="btn btn-primary" asp-action="AddEdit" asp-route-id="@item.Id" title="Edit"><i class="fa-solid fa-pen"></i></a>
                    <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@item.Id" title="Details"><i class="fa-solid fa-circle-info"></i></a>
                    <a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.Id" title="Delete"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
